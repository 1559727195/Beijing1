<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_corner_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.massky.new119eproject.view.RoundProgressBar
        android:id="@+id/roundProgressBar2"
        android:layout_width="100dip"
        android:layout_marginTop="10dp"
        android:layout_height="100dip"
         android:layout_gravity="center_horizontal"
        app:roundColor="#ADE2CE"
        app:roundProgressColor="#39B77A"
        app:textColor="@color/smssdk_gray"
        app:textIsDisplayable="true"
        app:roundWidth="1dip"
        app:roundWidth_inner = "8dp"
        app:textSize="18sp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:textColor="@color/blue"
    android:id="@+id/ftp_txt"
    android:textSize="14sp"
    android:layout_gravity="center_horizontal"
    android:text="是否上传报警视频"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/e0"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/call_cancel"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/blue"
            android:textSize="16dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:id="@+id/video_ftp_view"
            android:layout_height="match_parent"
            android:background="@color/e0"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/call_confirm"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>