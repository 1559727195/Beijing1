<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/color_381902">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="发送"
            android:visibility="gone"
            android:textColor="@color/camera_progress_three"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_4e3d31"
        android:id="@+id/line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="15dp"
        android:paddingRight="15dp">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/et_send_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:hint="呵呵呵呵呵呵呵呵"
                android:minHeight="66dp"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/grey8"
                android:background="@android:color/transparent"
                android:textSize="16sp" />
        </ScrollView>

        <ImageView
            android:id="@+id/iv_video_screenshot"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="14.5dp" />

    </LinearLayout>

    <com.massky.new119eproject.view.RoundProgressBar

        android:id="@+id/roundProgressBar2"
        android:layout_width="100dip"
        android:layout_marginTop="10dp"
        android:layout_height="100dip"
        android:layout_gravity="center_horizontal"
        app:roundColor="#ADE2CE"
        app:roundProgressColor="#39B77A"
        app:textColor="@color/smssdk_gray"
        app:textIsDisplayable="true"
        app:roundWidth="1dip"
        app:roundWidth_inner = "8dp"
        app:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:id="@+id/ftp_txt"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:text="是否上传报警视频"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/e0"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/call_cancel"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/blue"
            android:textSize="16dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:id="@+id/video_ftp_view"
            android:layout_height="match_parent"
            android:background="@color/e0"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/call_confirm"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e0"
        />
</LinearLayout>