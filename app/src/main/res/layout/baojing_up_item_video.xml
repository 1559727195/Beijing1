    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/img_show_pic"
            android:layout_width="100dp"
            android:background="#000000"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/video_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/play_big" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/img_show_pic"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <TextView
                android:id="@+id/baojing_local_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="京昆高速绵广段车祸：货车擦撞路边护栏引发火灾"
                android:paddingRight="5dp"
                android:textColor="@color/dark_bg_70p"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-11-19"
                android:id="@+id/baojing_time_video"
                android:textColor="#999999"
                android:textSize="12dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>