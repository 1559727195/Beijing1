    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:id="@+id/img_show_pic"
            android:src="@mipmap/pic_1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/img_show_pic"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/baojing_local_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="京昆高速绵广段车祸：货车擦撞路边护栏引发火灾"
                android:paddingRight="5dp"
                android:textColor="@color/dark_bg_70p"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-11-19"
                android:id="@+id/baojing_time_pic"
                android:textColor="#999999"
                android:textSize="12dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>